{
  "name": "Python 3.10",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.10",
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "none"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  }

  #!/bin/bash

echo "ðŸ“¦ Installing Git LFS inside Codespace..."

# Use Ubuntu fallback for Git LFS installer
os=ubuntu dist=focal curl -s https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh | bash

# Install Git LFS
apt-get update && apt-get install -y git-lfs

# Set up Git LFS
git lfs install

echo "âœ… Git LFS setup complete."

}


